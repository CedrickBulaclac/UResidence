@model List<UResidence.Admin>

@{
	Layout = "/Views/Layout/AdminLayout.cshtml";
}

@*Scripts for dropdown*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
@using (Html.BeginForm("ViewCashier", "Finance", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	<br /><br />
	<div class="container">
		<center> 	<h2>Cashier</h2> </center>

		<hr />
		<div class="dl-horizontal">
			<table class=" table table-bordered table-striped">

				<thead>
					<tr>
						<th>Fname</th>
						<th>Mname</th>
						<th>Lname</th>
						<th>Bdate</th>
						<th>CelNo</th>
						<th>Email</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (Admin a in Model)
					{

						<tr>

							<td>@Html.DisplayFor(model => a.Fname)</td>
							<td>@Html.DisplayFor(model => a.Mname)</td>
							<td>@Html.DisplayFor(model => a.Lname)</td>
							<td>@Html.DisplayFor(model => a.Bdate)</td>
							<td>@Html.DisplayFor(model => a.CelNo)</td>
							<td>@Html.DisplayFor(model => a.Email)</td>
							<td>
								<a class="btn btn-primary" href="@Url.Action("CashierEdit", "Finance", new { id = Convert.ToInt32(a.Id) })"><i class="glyphicon glyphicon-edit"></i></a>
								<a class="btn btn-danger" href="@Url.Action("Delete", "Finance", new { id = Convert.ToInt32(a.Id) })"><i class="glyphicon glyphicon-trash"></i> </a>
							</td>
						</tr>


					}
				</tbody>
			</table>
		</div>

		<div class="btn-link">

			<a href="@Url.Action("Registration_Cashier", "Finance")"><input id="btnAdd" type="button" value="ADD NEW CASHIER" class="btn btn-success" /></a>

		</div>
	</div>
	<div id="auerror" class="alert alert-danger collapse">
		<a href="#" class="close" data-dismiss="alert">&times;</a>
		<strong>Error!</strong> There is a problem updating the Cashier
	</div>
	<div id="ausuccess" class="alert alert-success collapse">
		<strong>Success!</strong> You have successfully updated the Cashier
	</div>


	<div id="aerror" class="alert alert-danger collapse">
		<a href="#" class="close" data-dismiss="alert">&times;</a>
		<strong>Error!</strong> There is a problem deleting the Cashier
	</div>
	<div id="asuccess" class="alert alert-success collapse">
		<strong>Success!</strong> You have successfully deleted the Cashier
	</div>


	<div id="aaerror" class="alert alert-danger collapse">
		<a href="#" class="close" data-dismiss="alert">&times;</a>
		<strong>Error!</strong> There is a problem submitting your form
	</div>
	<div id="aasuccess" class="alert alert-success collapse">
		<strong>Success!</strong> You have successfully added a Cashier
	</div>

	if (ViewBag.DeleteStatus != null)
	{
		if (ViewBag.DeleteStatus == true)
		{
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
			</script>
			<script type="text/javascript">
				$(document).ready(function () {

					$('#asuccess').show('fade');

					setTimeout(function () {
						$('#asuccess').hide('fade');
					}, 2000);
				});
			</script>
		}

		else
		{
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
			</script>
			<script type="text/javascript">
				$(document).ready(function () {

					$('#aerror').show('fade');

					setTimeout(function () {
						$('#aerror').hide('fade');
					}, 2000);


				});
			</script>
		}
	}

	if (ViewBag.UpdateMessage != null)
	{
		if (ViewBag.UpdateMessage == true)
		{
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
			</script>
			<script type="text/javascript">
				$(document).ready(function () {

					$('#ausuccess').show('fade');

					setTimeout(function () {
						$('#ausuccess').hide('fade');
					}, 2000);


				});
			</script>
		}

		else
		{
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
			</script>
			<script type="text/javascript">
				$(document).ready(function () {

					$('#auerror').show('fade');

					setTimeout(function () {
						$('#auerror').hide('fade');
					}, 2000);


				});
			</script>
		}
	}

	if (ViewBag.AddMessage != null)
	{
		if (ViewBag.AddMessage == true)
		{

			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
			</script>
			<script type="text/javascript">

				$(document).ready(function () {

					$('#aasuccess').show('fade');

					setTimeout(function () {
						$('#aasuccess').hide('fade');
					}, 20000);

				});
			</script>
		}

		else
		{
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
			</script>
			<script type="text/javascript">

				$(document).ready(function () {

					$('#aaerror').show('fade');

					setTimeout(function () {
						$('#aaerror').hide('fade');
					}, 2000);


				});
			</script>

		}

	}
}
