
@{
	ViewBag.Title = "NewPassword";
	Layout = "";
}
@using (Html.BeginForm("NewPassword", "Login", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		@Styles.Render("~/Content/css")
		@Scripts.Render("~/bundles/modernizr")
	</head>

	<div class="col-md-6">
		<div class="jumbotron">
			<table>
				<tr><td><h3>Reset Password</h3></td></tr>
				<tr><td><input type="password" placeholder="New Password" id="pw" name="pw" /></td></tr>
				<tr><td><input type="submit" class="btn btn-default" value="Submit" /></td></tr>
			</table>
		</div>
	</div>
}
