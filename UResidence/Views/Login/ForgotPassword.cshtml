@{
	ViewBag.Title = "ForgotPassword";
	Layout = "";
}


<html>
@using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
{
	@Html.AntiForgeryToken()

<head>
    <title>Palmdale Heights</title>
    <link rel="icon" href="~/Content/Logo/palmdale.png" type="image/x-icon" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">



    <style>
        .button {
            padding: 15px 25px;
            font-size: 15px;
            text-align: center;
            cursor: pointer;
            outline: none;
            color: #fff;
            background-color: #1eaa7a;
            border: none;
            border-radius: 5px;
        }

            .button:active {
                background-color: #1eaa7a;
            }

            .button:hover {
                background-color: #26d69a;
            }

        .btn-danger {
            padding: 15px 25px;
            font-size: 15px;
            text-align: center;
            cursor: pointer;
            outline: none;
            color: #fff;
            background-color: #d9534f;
            border: none;
            border-radius: 5px;
        }



            .btn-danger:active {
                background-color: #d9534f;
            }

            .btn-danger:hover {
                background-color: #f9544f;
            }
    </style>




</head>


	<body background="~/Content/Log/loginbg.jpg" style=" background-size:cover; background-repeat: no-repeat; ">
		<br />
		<br />
		<br />
		<br />
		<br />

		<div class=" container ">
			<div class=" col-md-4"></div>

			<div class="col-md-4 ">

				<center>

					<div class="jumbotron" style=" box-sizing:content-box; background-color: rgba(10,10,10,.68); max-width:500px; min-height: 290px; margin: 30px auto;">


						<font face="Helvetica">
							<font color="white">

								<br />

								<p>Forgot Password?</p>

								<hr />

								<div class="text-center">


									<font color="white">
										<p>Please enter your email to reset your password.</p>

										<br />
										<input type="text" id="email" name="email" placeholder="Email" class="form-control"
											   style="width: 50%;
												padding: 12px 20px;
												margin: 8px 0;
												display: inline-block;
												border: 1px solid #ccc;
												border-radius: 4px;
												 box-sizing: border-box;" />

										<font color="white">
											<br />
											<br />

											<input type="submit" button class="button " />
											<a href="~/Login/Index"><button type="button" class="btn btn-danger">Cancel</button></a>




										</font>
									</font>


								</div>

							</font>
						</font>
					</div>
				</center>
			</div>
			<div class="col-md-4"></div>
		</div>

	</body>
}

</html>