@model UResidence.Billing

@{
    Layout = "~/Views/Reserve/Layout.cshtml";
}
<br />
<br />
<br />
<br />

<div class="body-content">
    <div class="col-lg-4">

    </div>
    <div class="col-lg-4">
        <table border="1" style="width:500px; position:center; background:#FFF">
            <tbody>
                <tr>
                    <td colspan="2" style="text-align:center; font-size:16px;color:#fff; font-weight:bold;background:#015a2f" ;>Balance</td>
                </tr>
                <tr>
                    <td style="text-align:left; font-size:16px; font-weight:bold;">Total Dues</td>
                    <td style="text-align:right; font-size:18px; font-weight:bold;">@Model.Balance</td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="col-lg-4">

    </div>
</div>
<br />
<br />
<br />
<div id="aaerror" class="alert alert-danger collapse">
    <strong>Please settle your account before you can reserve.</strong>
</div>


<script type="text/javascript">
    var status = 0;


    $(document).ready(
        function () {
            status = @Model.Balance;
            if (status > 0) {
                $('#aaerror').show('fade');
            }

        }
    );




</script>