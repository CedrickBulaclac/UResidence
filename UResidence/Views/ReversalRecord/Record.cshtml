	function SetModal(Id, Amount, Description) {
		$('#updateModal').modal();
		document.getElementById('amount').value = Amount;
		document.getElementById('description').value = Description;
		document.getElementById('txtid').value = Id;
	}

	function Update() {
		
		if (confirm('Are you sure?')) {
			var desc = document.getElementById('description').value;
			var amt = document.getElementById('amount').value;
			var id = document.getElementById('txtid').value;
			var data = {
				Description: desc,
				Amount: amt,
				Id: id
			}

			$.ajax({
				type: 'POST',
				url: '/ReversalRecord/Update',
				data: data,
				success: function (data) {
					alert('Success');
					window.location.reload();

				},
				error: function (data) {
					alert('Failed');
				}



			});
		}
	}
	function UpdateStatus(id) {
		
		if (confirm('Are you sure?')) {
			var status = document.getElementById('rstatus').value;
			var data = {
				Id: id,
				Status: status
			};
			$.ajax({
				type: 'POST',
				url: '/ReversalRecord/UpdateStatus',
				data: data,
				success: function (data) {
					window.location.reload();
				},
				error: function (data) {
					alert('failed');
				}

			});
		}
	}
	function Set(s) {
		//var s = document.getElementById('select').value;
        document.getElementById('caption').innerHTML = 'List of ' + s + ' Amenity';
		if (s == 'Pending') {
			SetP();
		}
		else if (s == 'Approved') {
			SetA();
		}
		else if (s == 'Denied') {
			SetD();
		}
		else {
			SetC();
		}
	}
