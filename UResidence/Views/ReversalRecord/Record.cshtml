                 @*<center><h2>Reversal Module</h2></center>*@
                 <div class="panel panel-default">
                     <div class="panel-heading" style="background-color:  #1C2331">
                         <font color="white"> <h3 class="panel-title"> Reversal Module  </h3></font>
