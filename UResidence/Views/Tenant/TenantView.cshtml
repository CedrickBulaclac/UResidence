<script>
	$(document).ready(function () {
		var table = $('#TenantData').DataTable({
			"ajax": {
				"url": '/Tenant/GetTenant',
				"type": "GET",
				"datatype": "json",
			},
            "columns": [
                { "data": "BldgNo", "autowidth": true },
				{ "data": "UnitNo", "autowidth": true },			
				{ "data": "Fullname", "autowidth": true },
				{ "data": "Bdate", render: function (data, type, announcement) { return announcement.FormattedDate }, "autowidth": true },
				{ "data": "CelNo", "autowidth": true },
				{ "data": "Email", "autowidth": true },
				{ "data": "Lease", "autowidth": true },
				{ "data": "MovingIn", "autowidth": true, render: function (data) { return '<button class="btn btn-info" id="btnMovingIn" onclick="Set1(\'' + data + '\')">View</button>' } },
				{ "data": "MovingOut", "autowidth": true, render: function (data) { return '<button class="btn btn-info" id="btnMovingOut" onclick="Set2(\'' + data + '\')">View</button>' } },
				{ "data": "Id", "autowidth": true, render: function (data) { return '<a id="btnUpdate" class="btn btn-primary" href="/Tenant/TenantEdit/' + data + '"><i class="glyphicon glyphicon-edit"></i></a> <a class="btn btn-danger" href="/Tenant/Delete/' + data + '"><i class="glyphicon glyphicon-trash"></i> </a>' } }
			]
		});
	});
	var mi;
	function Download() {
		$.post("/Tenant/Download");
	}

	function Set1(movingIn) {
		mi = movingIn;
		var fullpath = (mi).toString();
		var filename = fullpath.replace(/^.*[\\\/]/, '');
		var path = "../Content/TenantImages/" + filename;

		document.getElementById('movin').setAttribute('src', path)

		$('#movingInModal').modal();
	}

	function Set2(movingout) {
		mi = movingout;
		var fullpath = (mi).toString();
		var filename = fullpath.replace(/^.*[\\\/]/, '');
		var path = "../Content/TenantImages/" + filename;

		document.getElementById('movout').setAttribute('src', path)

		$('#movingOutModal').modal();
	}


	$("form").submit(function (e) {
		var leasestart = document.getElementById('LeaseStart').value
		var leaseend = document.getElementById('LeaseEnd').value


		var date1 = new Date(leasestart);
		var date2 = new Date(leaseend);

		if (date1 > date2) {
			alert("Invalid Lease Start OR Lease End");
			e.preventDefault();
		}
	
	});



	$('#addbtn').click(function () {

		$('#AddModal').modal();
	}
	);


	$('#btnCloseImage').click(function () {

		$('#movingInModal').hide();
	}
	);

	$('#btnMovingIn').click(function () {

		$('#movingInModal').modal();
	}
	);

	$('#btnMovingOut').click(function () {

		$('#movingOutModal').modal();
	}
	);

	$('#btnCloseImagee').click(function () {

		$('#movingOutModal').hide();
	}
	);
</script>
