@model List<Amenity>


@{
    ViewBag.Title = "Amenity";
    if (Convert.ToInt32(Session["Level"]) == 8)
    {
        Layout = "~/Views/Layout/LayoutHome.cshtml";
    }
    else if (Convert.ToInt32(Session["Level"]) == 9)
    {
        Layout = "~/Views/Layout/TenantLayout.cshtml";
    }
    else
    {
        Layout = "/Views/Layout/AdminLayout.cshtml";
    }
}

<div id="main">

    @using (Html.BeginForm("Amenity", "Reserve", FormMethod.Post))
    {
        @Html.AntiForgeryToken()



        if (Convert.ToInt32(Session["Level"]) <= 7)
        {
            @*Scripts for dropdown*@
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        }




        <head>

            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">



            <style>
                .hidden {
                    display: none;
                }

                body {
                    /*background-color: #dcedc8;*/
                    background: url(../../Content/WebImages/swimmingbg.jpg) no-repeat center center fixed;
                    --webkit-background-size: cover;
                    --moz-background-size: cover;
                    --o-background-size: cover;
                    background-size: cover;
                }




                .db-pricing-seven {
                    margin-bottom: 30px;
                    margin-top: 30px;
                    text-align: center;
                    border: 1px solid #C5C2C2;
                    background-color: #fafafa;
                }

                    .db-pricing-seven:hover {
                        margin-top: 5px;
                        -moz-transition: margin-top 0.25s ease 0s;
                        -ms-transition: margin-top 0.25s ease 0s;
                        transition: margin-top 0.25s ease 0s;
                    }

                    .db-pricing-seven ul {
                        list-style: none;
                        margin: 0;
                        text-align: center;
                        padding-left: 0px;
                    }

                        .db-pricing-seven ul li {
                            /*border-bottom: solid 1px #D8D8D8;*/
                            padding-top: 20px;
                            padding-bottom: 20px;
                            cursor: pointer;
                            text-transform: uppercase;
                        }

                            .db-pricing-seven ul li.price {
                                background-color: #f5f5f5;
                                padding: 40px 20px 20px 20px;
                                font-size: 20px;
                                font-weight: 900;
                                /*color: #353c3e;*/
                                font-weight: 900;
                            }

                                .db-pricing-seven ul li.price i {
                                    padding: 30px;
                                    font-size: 50px;
                                    display: block;
                                }


                    .db-pricing-seven .pricing-footer {
                        padding: 20px;
                    }

                        .db-pricing-seven .pricing-footer a i {
                            margin: 5px;
                            top: 3px;
                        }

                .pcolor {
                    background-color: #fafafa;
                }
            </style>
        </head>






        <br />
        <br />
        <br />
        <!--Progress bar start-->
        <div class="container">
            <center>
                <div class="progress panel panel-default" style="height:55px;">
                    <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="20"
                         aria-valuemin="0" aria-valuemax="100" style="width:20%;">
                        <p style="font-family:Arial, Helvetica, sans-serif; padding-top:1em; "> <font color="white" size="3">Choose Amenity</font></p>
                    </div>


                    <div class="progress-bar" style="background-color:#979797; width:20%;" role="progressbar" aria-valuenow="0"
                         aria-valuemin="0" aria-valuemax="100">
                        <p style="font-family:Arial, Helvetica, sans-serif;padding-top:1em"> <font color="white" size="3">Scheduled Amenity</font> </p>
                    </div>


                    <div class="progress-bar" style="background-color:#979797; width:20%;" role="progressbar" aria-valuenow="0"
                         aria-valuemin="0" aria-valuemax="100">
                        <p style="font-family:Arial, Helvetica, sans-serif;padding-top:1em"> <font color="white" size="3">Choose Date</font> </p>
                    </div>

                    <div class="progress-bar " style="background-color:#979797; width:20%;" role="progressbar" aria-valuenow="0"
                         aria-valuemin="0" aria-valuemax="100">
                        <p style="font-family:Arial, Helvetica, sans-serif;padding-top:1em"> <font color="white" size="3">Choose Equipment</font> </p>
                    </div>
                    <div class="progress-bar  " style="background-color:#979797; width:20%;" role="progressbar" aria-valuenow="0"
                         aria-valuemin="0" aria-valuemax="100">
                        <p style="font-family:Arial, Helvetica, sans-serif;padding-top:1em"> <font color="white" size="3">Summary</font> </p>
                    </div>
                </div>

            </center>    <!--Progress bar end-->
        </div>






        <div class="container">

            <div class="panel panel-default pcolor" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.1), 0 3px 10px 0 rgba(0, 0, 0, 0.1);">
                <div class="panel-body" style="margin-left: 10px;margin-right: 10px;">


                    <div class=" pricing-table pricing-three-column row">
                        <input type="hidden" name="ida" id="ida" />
                        <input type="hidden" name="ratea" id="ratea" />
                        <input type="hidden" name="ratec" id="ratec" />
                        <input type="hidden" name="rateaa" id="rateaa" />
                        <input type="hidden" name="namea" id="namea" />
                        <input type="hidden" name="eve" id="eve" />

                        @{

                            int ctr = 0;
                            foreach (var amn in Model)
                            {
                                ctr++;
                                if (ctr <= 3)
                                {

                                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                        <div class="db-wrapper">
                                            <div class="db-pricing-seven">
                                                <ul>
                                                    <li class="price">
                                                        <img src="@Url.Content(amn.Url)" alt="" class="img-responsive" />

                                                    </li>
                                                    <li>  <h3> <b>  @Html.DisplayFor(model => amn.AmenityName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "Name" } }) </b></h3> </li>
                                                    <li> <b>  Description: </b> @Html.DisplayFor(model => amn.Description, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>
                                                    <li> <b> Capacity:</b> @Html.DisplayFor(model => amn.Capacity, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) persons</li>

                                                    @if (amn.AmenityName.ToUpper().Contains("SWIMMING"))
                                                    {
                                                        <li> <b> Adult Rate: </b> @Html.DisplayFor(model => amn.Adult, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>
                                                        <li> <b> Child Rate: </b> @Html.DisplayFor(model => amn.Child, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>
                                                    }
                                                    else
                                                    {
                                                        <li> <b> Morning Rate /hr:  </b>  @Html.DisplayFor(model => amn.Rate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>
                                                        <li> <b> Evening Rate /hr:  </b>  @Html.DisplayFor(model => amn.EveRate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>

                                                    }


                                                    <li>
                                                        <div class="pricing-footer">

                                                            @if (amn.AmenityName.ToUpper().Contains("SWIMMING"))
                                                            {
                                                                <button class="w3-button w3-green" style="float:right;" type="submit" id="btnImg" onclick="GetId('@amn.Id','@amn.Adult','@amn.Child','@amn.AmenityName')" name="btnImg">Select</button>
                                                            }
                                                            else
                                                            {
                                                                <button class="w3-button w3-green" style="float:right;" type="submit" id="btnImg" onclick="GetIdd('@amn.Id','@amn.Rate','@amn.AmenityName','@amn.EveRate')" name="btnImg">Select</button>

                                                            }
                                                        </div>
                                                    </li>
                                                </ul>

                                            </div>
                                        </div>
                                    </div>

















                                }


                                else
                                {
                                    ctr = 0;

                                    <div class="container">
                                        <div class="row">

                                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                                <div class="db-wrapper">
                                                    <div class="db-pricing-seven">
                                                        <ul>
                                                            <li class="price">
                                                                <img src="@Url.Content(amn.Url)" alt="" class="img-responsive" />

                                                            </li>
                                                            <li>  <h3><b> @Html.DisplayFor(model => amn.AmenityName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "Name" } }) </b></h3> </li>
                                                            <li><b>Description:</b>  @Html.DisplayFor(model => amn.Description, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>
                                                            <li> <b>Capacity:</b> @Html.DisplayFor(model => amn.Capacity, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) persons</li>
                                                            @if (amn.AmenityName.ToUpper().Contains("SWIMMING"))
                                                            {
                                                                <li> <b>Adult Rate:</b>   @Html.DisplayFor(model => amn.Adult, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>
                                                                <li> <b>Child Rate:</b>  @Html.DisplayFor(model => amn.Child, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>
                                                            }
                                                            else
                                                            {
                                                                <li> <b>Morning Rate /hr: </b>   @Html.DisplayFor(model => amn.Rate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>
                                                                <li> <b>Evening Rate /hr: </b>  @Html.DisplayFor(model => amn.EveRate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</li>
                                                            }
                                                            <li>
                                                                <div class="pricing-footer">

                                                                    @if (amn.AmenityName.ToUpper().Contains("SWIMMING"))
                                                                    {
                                                                        <button class="w3-button w3-green" style="float:right;" type="submit" id="btnImg" onclick="GetId('@amn.Id','@amn.Adult','@amn.Child','@amn.AmenityName')" name="btnImg">Select</button>
                                                                    }
                                                                    else
                                                                    {
                                                                        <button class="w3-button w3-green" style="float:right;" type="submit" id="btnImg" onclick="GetIdd('@amn.Id','@amn.Rate','@amn.AmenityName','@amn.EveRate')" name="btnImg">Select</button>

                                                                    }
                                                                </div>
                                                            </li>
                                                        </ul>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }

                    </div>
                </div>
            </div>
        </div>

    }
    <br />
    <br />
    <br />
    <br />
    @*<footer style=" background-color:#282828; padding: 10px; text-align: center;color: white;">
            <p> <center><img src="~/Content/logo.png" width="180" height="80" /> </center></p>
            <p><i class="fa fa-map-marker w3-text-green w3-xlarge"></i>  8505 Hon. A Sandoval Ave., Brgy. Pinagbuhatan Pasig City</p>
            <p><i class="fa fa-phone w3-text-green w3-xlarge"></i>  (632) 571-2347, (632) 571-0966</p>
            <p><i class="fa fa-envelope-o w3-text-green w3-xlarge"></i>  palmdalecondominium@yahoo.com</p>
            <p>&copy; @DateTime.Now.Year -Palmdale Heights Condominium</p>

        </footer>*@

    <script type="text/javascript">
        function GetIdd(id, rate, name, eve) {
            document.getElementById('ida').value = id;
            document.getElementById('ratea').value = rate;
            document.getElementById('namea').value = name;
            document.getElementById('eve').value = eve;
        }

        function GetId(id, ratea, ratec, name) {
            document.getElementById('ida').value = id;
            document.getElementById('rateaa').value = ratea;
            document.getElementById('ratec').value = ratec;
            document.getElementById('namea').value = name;
            document.getElementById('ratea').value = 0;
            document.getElementById('eve').value = 0;

        }
    </script>
</div>