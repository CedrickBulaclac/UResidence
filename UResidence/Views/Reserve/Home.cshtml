<div class="container">
	<div class="modal fade" id="myModal" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>

				</div>
				<div class="modal-body">
                    <strong>You have an Outstanding Balance of ₱ @ViewBag.Bal</strong>
				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- AMENITY TOH -->
<div class="w3-padding-64 w3-center w3-dark-gray">
	<h1 class="w3-jumbo"><b>Amenities</b></h1>
	<p class="w3-large">Choose the Amenity that fits your needs.</p>
	<div class="w3-row-padding" style="margin-top:64px">
		@foreach (var a in Model)
		{
			<div class="w3-half w3-section">
				<ul class="w3-ul w3-card w3-hover-shadow">


					<li class="w3-green w3-xlarge w3-padding-32">@a.AmenityName</li>
					<img src="@Url.Content(a.Url)" width="100%;" height="50%" />

					<div class="align">
						<li class="w3-padding-16"><b><i class="glyphicon glyphicon-grain"></i></b> @a.Capacity persons</li>
						@if (a.AmenityName.ToUpper() == "SWIMMING POOL")
						{
							<li class="w3-padding-16"><b><i class="glyphicon glyphicon-grain"></i></b> Adult Rate: @a.Adult </li>
							<li class="w3-padding-16"><b><i class="glyphicon glyphicon-grain"></i></b> Child Rate: @a.Child </li>
						}
						else
						{
							<li class="w3-padding-16"><b><i class="glyphicon glyphicon-grain"></i></b> @a.Rate per hour</li>
						}

						<li class="w3-padding-16"><b><i class="glyphicon glyphicon-grain"></i></b> Not available for Overnight use ( strictly until 9:00 pm only)</li>
						<li class="w3-padding-16"><b><i class="glyphicon glyphicon-grain"></i></b> @a.Location</li>
						<li class="w3-padding-16"><b><i class="glyphicon glyphicon-grain"></i></b> Additional charges may vary upon extension of time and damage </li>
					</div>

					<li class="w3-green w3-padding-24">

					</li>
				</ul>
			</div>
		}




	</div>
	<br>
</div>


