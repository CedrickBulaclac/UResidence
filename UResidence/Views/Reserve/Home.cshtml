
@{
	ViewBag.Title = "Home";
	if (Convert.ToInt32(Session["Level"]) == 4)
	{
		Layout = "~/Views/Layout/LayoutHome.cshtml";
	}
	else if (Convert.ToInt32(Session["Level"]) == 5)
	{
		Layout = "~/Views/Layout/TenantLayout.cshtml";
	}
}
<style>
	.first {	
	}

	.second {
	}

	.third {
	}
</style>



<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="icon" href="~/Content/Logo/palmdale.png" type="image/x-icon" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


@*<body background="~/Content/WebImages/bg2.jpg" style=" background-size:cover; background-repeat: no-repeat; ">*@


<!-- Header -->
<header class="w3-display-container w3-content w3-wide" style="max-width:1600px;" id="home">
	<img class="w3-image" src="~/Content/Log/loginbg.jpg" alt="Palmdale Heights" width="1600" height="600">
	<div class="w3-display-middle w3-margin-top w3-center">
		<h1 class="w3-xxlarge w3-text-white"><span class="w3-padding w3-black w3-opacity-min"><b>Palmdale</b></span> <span class="w3-hide-small w3-text-dark-grey">Heights</span></h1>
	</div>
</header>


<div class="container">
	<div class="modal fade" id="myModal" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>

				</div>
				<div class="modal-body">
					<strong>Please settle your account before you can reserve.</strong>
				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
</div>


<!-- About Us -->
@*<br />
	<br />
	<br />*@
<div class="second">
	<div class="w3-row-padding w3-padding-64 w3-dark-gray" id="work">

		<div class="w3-quarter">
			<h2>About Us</h2>
			<p> <font size="3"> 
				Palmdale Heights, Pasig City that has 828 units development for its first two phases that have been completed and 85% or 703 units have been sold at the end of September 2013. Palmdale Heights is a project of Keppel Bank of Singapore (formerly GE Money and now BDO) and Buena Homes; managed by CBRE. There six 10-storey condo buildings.
				</font>
			</p>
		</div>


		<br />
		<div class="w3-quarter">
			<div class="w3-card w3-white">
				<img src="~/Content/WebImages/jumbo1.jpg" alt="jumbo1" style="width:100%; height:50%">
				<div class="w3-container">
					
					<h4>Entrance and Exit Area</h4>
				</div>
			</div>
		</div>



		<div class="w3-quarter">
			<div class="w3-card w3-white">
				<img src="~/Content/WebImages/jumbo2.jpg" alt="jumbo1" style="width:100%">
				<div class="w3-container">
					
					<h4>Swimming Pool Area</h4>
				</div>
			</div>
		</div>





		<div class="w3-quarter">
			<div class="w3-card w3-white">
				<img src="~/Content/WebImages/jumbo3.jpg" alt="jumbo1" style="width:100%">
				<div class="w3-container">
					
					<h4>Playground Area</h4>
				</div>
			</div>
		</div>


	</div>
</div>





<!-- Contact -->
<div class="third">
	<div class="w3-container w3-padding-64 w3-theme-l5" id="contact">
		<div class="w3-row">
			<div class="w3-col m5">
				<div class="w3-padding-16"><span class="w3-xlarge w3-border-green w3-bottombar">Contact Us</span></div>
				<h3>Address</h3>
				<p>Relaxing Breeze</p>
				<p><i class="fa fa-map-marker w3-text-green w3-xlarge"></i>  8505 Hon. A Sandoval Ave., Brgy. Pinagbuhatan Pasig City</p>
				<p><i class="fa fa-phone w3-text-green w3-xlarge"></i>  (632) 571-2347, (632) 571-0966</p>
				<p><i class="fa fa-envelope-o w3-text-green w3-xlarge"></i>  palmdalecondominium@yahoo.com</p>
			</div>
			<div class="w3-col m7">
				<form class="w3-container w3-card-4 w3-padding-16 w3-white" action="/action_page.php" target="_blank">
					<div class="w3-section">
						<label>Name</label>
						<input class="w3-input" type="text" name="Name" required>
					</div>
					<div class="w3-section">
						<label>Email</label>
						<input class="w3-input" type="text" name="Email" required>
					</div>
					<div class="w3-section">
						<label>Message</label>
						<input class="w3-input" type="text" name="Message" required>
					</div>
					<input class="w3-check" type="checkbox" checked name="Like">
					<label>I Like it!</label>
					<button type="submit" class="w3-button w3-right w3-green">Send</button>
				</form>
			</div>
		</div>
	</div>
</div>

	<!-- Footer -->
	<footer class="w3-center  w3-dark-gray w3-padding-16 w3-text-white " style="padding-bottom:10%;">
		<p>&copy; @DateTime.Now.Year -Palmdale Heights Condominium</p>
	</footer>



	<script type="text/javascript">
    $(document).ready(
        function () {

            if (@ViewBag.Status == true) {
                $('#myModal').modal();
            }

        }
    );
	</script>

	<script>
		$("#btnAbout").click(function () {
			$('html,body').animate({
				scrollTop: $(".second").offset().top
			},
				'slow');
		});

		$("#btnContact").click(function () {
			$('html,body').animate({
				scrollTop: $(".third").offset().top
			},
				'slow');
		});
	</script>
