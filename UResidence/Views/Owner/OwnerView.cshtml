<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        var table = $('#OwnerTable').DataTable({
            "ajax": {
                "url": '/Owner/GetOwner',
                "type": "GET",
                "datatype": "json",
            },
            "columns": [
                { "data": "BldgNo", "autowidth": true },
                { "data": "UnitNo", "autowidth": true },
                { "data": "Fullname", "autowidth": true },
                { "data": "Bdate", render: function (data, type, announcement) { return announcement.FormattedDate }, "autowidth": true },
                { "data": "CelNo", "autowidth": true },
                { "data": "Email", "autowidth": true },
                { "data": "Form", "autowidth": true, render: function (data) { return '<button class="btn btn-info" id="setBtn" onclick="Set(\'' + data + '\')">View</button>' } },
				{ "data": "Id", "autowidth": true, render: function (data) { return '<a id="btnUpdate" class="btn btn-primary" href="/Owner/OwnerEdit/' + data + '"><i class="glyphicon glyphicon-edit"></i></a> <a class="btn btn-danger" href="/Owner/Delete/' + data + '"><i class="glyphicon glyphicon-trash"></i> </a>' } }
            ]
        });
    });
    var fr;
    function Download() {
        $.post("/Owner/Download");
    }

    function Set(form) {
        fr = form;
        var fullpath = (fr).toString();
        var filename = fullpath.replace(/^.*[\\\/]/, '');
        var path = "../Content/OwnerImages/" + filename;

        document.getElementById('oform').setAttribute('src', path)

        $('#formModal').modal();
    }


    $('#btnCloseImage').click(function () {

        $('#formModal').hide();
    }
    );

    $('#addbtn').click(function () {

        $('#AddModal').modal();
    }
    );

    $('#btnUpdate').click(function () {

        $('#UpdateModal').modal();
    }
    );
</script>