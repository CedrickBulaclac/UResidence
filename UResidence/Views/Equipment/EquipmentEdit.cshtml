@model UResidence.Equipment

@using (Html.BeginForm("EquipmentEdit", "Equipment", FormMethod.Post))
{
	@Html.AntiForgeryToken()

<div class="form-horizontal">
	<h4>Equipment</h4>
	<div class="btn-link">
		<a href="@Url.Action("EquipmentView","Equipment")"><input id="btnBack" type="button" value="BACK" class="btn btn-default" /></a>
	</div>

	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@if (ViewBag.equipment != null)
	{
		foreach (Equipment e in ViewBag.equipment)
		{

			<div class="form-group">
				@Html.LabelFor(model => model.EquipmentNo, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.EquipmentNo, new { htmlAttributes = new { @class = "form-control", @Value = e.EquipmentNo, @readonly = "readonly" } })
					@Html.ValidationMessageFor(model => model.EquipmentNo, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Stocks, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Stocks, new { htmlAttributes = new { @class = "form-control", @Value = e.Stocks } })
					@Html.ValidationMessageFor(model => model.Stocks, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Rate, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control", @Value = e.Rate } })
					@Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @Value = e.Name } })
					@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
				</div>
			</div>



			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Save" class="btn btn-default" />
				</div>
			</div>

		}
	}

</div>

	<div id="aerror" class="alert alert-danger collapse">
		<a href="#" class="close" data-dismiss="alert">&times;</a>
		<strong>Error!</strong> There is a problem Updating the Equipment
	</div>
	<div id="asuccess" class="alert alert-success collapse">
		<strong>Success!</strong> You have successfully updated the Equipment
	</div>
	if (ViewBag.UpdateMessage != null)
	{
		if (ViewBag.UpdateMessage == true)
		{
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
			</script>
			<script type="text/javascript">
                $(document).ready(function () {

                    $('#asuccess').show('fade');

                    setTimeout(function () {
                        $('#asuccess').hide('fade');
                    }, 2000);


                });
			</script>
		}

		else
		{
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
			</script>
			<script type="text/javascript">
                $(document).ready(function () {

                    $('#aerror').show('fade');

                    setTimeout(function () {
                        $('#aerror').hide('fade');
                    }, 2000);


                });
			</script>
		}
	}
}

