<script>
	function UpdateImage(id) {

		var Id = id;

		var file = $("#imageequip").get(0).files;
		var data = new FormData();
		data.append("Image", file[0]);
		data.append("Id", Id);

		$.ajax({
			type: "POST",
			url: "/Equipment/UpdateImage/",
			data: data,
			contentType: false,
			processData: false,
			success: function (data) {
				if (data == true) {
					alert('Success');
					location.reload();

				}
			},
			error: function (error) {
				alert(error);
			}
		});
	}

	$('#btnCloseImage').click(function () {

		$('#updateImageModal').hide();
	}
	);

	$('#btnUpdateImage').click(function () {

		$('#updateImageModal').modal();
	}
	);
</script>