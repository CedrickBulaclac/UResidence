@model UResidence.Equipment
@{
    ViewBag.Title = "AdminView";
    if (Convert.ToInt32(Session["Level"]) == 1)
    {
        Layout = "/Views/Layout/BossManagerLayout.cshtml";
    }
    else if (Convert.ToInt32(Session["Level"]) == 0)
    {
        Layout = "/Views/Layout/SuperAdminLayout.cshtml";
    }
    else
    {
        Layout = "/Views/Layout/AdminLayout.cshtml";
    }
}

<html>

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <style>

      

        label {
            padding: 12px 12px 12px 0;
            display: inline-block;
        }

        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        .button {
            padding: 15px 25px;
            font-size: 15px;
            text-align: center;
            cursor: pointer;
            outline: none;
            color: #fff;
            background-color: #18ac6f;
            border: none;
            border-radius: 5px;
        }



            .button:hover {
                background-color: #46bc8b;
            }

        /*.containerAdmin {
            padding-left: 150px;
        }*/
    </style>
</head>

<body>


    <br />
    <br />
    <br />
    <br />
    <br />
    <br />


    @using (Html.BeginForm("EquipmentEdit", "Equipment", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        <div class="containerAdmin">




            <div class="btn-link">

            </div>





            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)


            <div class="container">

                <div class="panel panel-collapse">
                    <div class="panel-heading" style="background-color:  #1C2331">
                        <font color="white"> <h3 class="panel-title"> Update Equipment Information </h3></font>
                    </div>



                    <div class="col-sm-12">
                        <div class="form-group">

                            <label class="col-sm-4" for="Name">Name :</label>

                            <div class="col-sm-6">

                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })


                            </div>
                        </div>
                    </div>






                    <div class="col-sm-12">
                        <div class="form-group">

                            <label class="col-sm-4" for="Stocks">Stocks :</label>

                            <div class="col-sm-6">

                                @Html.EditorFor(model => model.Stocks, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Stocks, "", new { @class = "text-danger" })


                            </div>
                        </div>
                    </div>





                    <div class="col-sm-12">
                        <div class="form-group">

                            <label class="col-sm-4" for="Rate">Rate :</label>

                            <div class="col-sm-6">

                                @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>






                    <div class="col-sm-12">
                        <div class="form-group">

                            <label class="col-sm-4" for="Image">Image :</label>

                            <div class="col-sm-6">

                                <button type="button" class="btn btn-info" id="btnUpdateImage" name="btnUpdateImage" data-dismiss="modal">Update Image</button>

                            </div>
                        </div>
                    </div>








                    <div class="col-sm-12">
                        <div class="form-group">

                            <label class="col-sm-4" for="Description">Description :</label>

                            <div class="col-sm-6">

                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>



                </div>
                <div class="pull-right">
                    <input type="submit" value="Save Changes" class="button" />
                    <a href="@Url.Action("EquipmentView","Equipment")"><input id="btnBack" type="button" value="Cancel" class="button" /></a>
                </div>

                <br />
            </div>
        </div>



        @*---Modal for Update Equipment Image---*@
        <div class="container">
            <div class="modal fade" id="updateImageModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <input type="file" id="imageequip" name="imageequip" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" id="btnUpdate" name="btnUpdate" onclick="UpdateImage(@Model.Id)" style="float:right;">Update</button>
                            <button type="button" class="btn btn-danger" id="btnCloseImage" name="btnCloseImage" data-dismiss="modal" style="float:right;">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="aerror" class="alert alert-danger collapse">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Error!</strong> There is a problem Updating the Equipment
        </div>
        <div id="asuccess" class="alert alert-success collapse">
            <strong>Success!</strong> You have successfully updated the Equipment
        </div>
        if (ViewBag.UpdateMessage != null)
        {
            if (ViewBag.UpdateMessage == true)
            {
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
                </script>
                <script type="text/javascript">
                    $(document).ready(function () {

                        $('#asuccess').show('fade');

                        setTimeout(function () {
                            $('#asuccess').hide('fade');
                        }, 2000);


                    });
                </script>
            }

            else
            {
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
                </script>
                <script type="text/javascript">
                    $(document).ready(function () {

                        $('#aerror').show('fade');

                        setTimeout(function () {
                            $('#aerror').hide('fade');
                        }, 2000);


                    });
                </script>
            }
        }
    }

</body>
</html>


<script>
	function UpdateImage(id) {

		var Id = id;

		var file = $("#imageequip").get(0).files;
		var data = new FormData();
		data.append("Image", file[0]);
		data.append("Id", Id);

		$.ajax({
			type: "POST",
			url: "/Equipment/UpdateImage/",
			data: data,
			contentType: false,
			processData: false,
			success: function (data) {
				if (data == true) {
					alert('Success');
					location.reload();

				}
			},
			error: function (error) {
				alert(error);
			}
		});
	}

	$('#btnCloseImage').click(function () {

		$('#updateImageModal').hide();
	}
	);  

	$('#btnUpdateImage').click(function () {

		$('#updateImageModal').modal();
	}
	);
</script>