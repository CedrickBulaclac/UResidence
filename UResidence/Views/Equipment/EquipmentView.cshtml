@*Modal for Viewing Image Equipment*@
<div class="container">
    <div class="modal fade" id="equipmentModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <label>Equipment Image</label>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <center>
                        <img height="250px" src="" width="250px" id="equip">
                    </center>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="btnCloseImage" name="btnCloseImage" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Registration", "Equipment", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="modal fade" id="AddModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-25">

                                <label>Name :</label>

                            </div>

                            <div class="col-75">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                            </div>
                        </div>



                        <div class="row">
                            <div class="col-25">

                                <label>Stocks :</label>

                            </div>

                            <div class="col-75">
                                @Html.EditorFor(model => model.Stocks, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Stocks, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="row">
                            <div class="col-25">

                                <label>Rate :</label>

                            </div>

                            <div class="col-75">
                                @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                            </div>
                        </div>




                        <div class="row">
                            <div class="col-25">

                                <label>Description :</label>

                            </div>

                            <div class="col-75">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-25">
                                <p>
                                    <label>Equipment Image :</label>
                                </p>
                            </div>
                            <input type="file" id="Image" name="Image" />

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success" id="btnAdd" name="btnAdd" onclick="Add()">Save</button>
                        <button type="button" class="btn btn-danger" id="btnClose" name="btnClose" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
